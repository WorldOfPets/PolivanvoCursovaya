<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCurs.Views.ArticlePage"
             Title="Article Reader">
    <ContentPage.Content>
        <Grid BackgroundColor="#17171A">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="12*"/>
            </Grid.RowDefinitions>
            <Label x:Name="TitleText"
                   Text="How to properly plan your day"
                   TextColor="White"
                   FontSize="20"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   Grid.Row="0"/>
            <ScrollView
                Margin="20, 0"
                Grid.Row="1">

                <Label x:Name="ContentLabel"
                   TextColor="White">
                </Label>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>